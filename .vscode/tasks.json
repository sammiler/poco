{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake-configure",
            "type": "shell",
            "command": "cmake",
            "args": [
				"-S",
                ".",
                "-B",
                "tempbuild",
                "-G",
                "Visual Studio 17 2022", // 指定 MSVC 的生成器（根据你的 VS 版本调整）
                "-A",
                "x64",                   // 指定目标架构（如 x64）
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_CXX_FLAGS_DEBUG=/Zi", // MSVC 的调试标志
                "-DCMAKE_CXX_FLAGS=/EHsc /W3" ,
				"-DCMAKE_CXX_FLAGS=/EHsc /W3 /MP",
				"-DCMAKE_RUNTIME_OUTPUT_DIRECTORY=${workspaceFolder}/tempbuild/bin",
				"-DCMAKE_LIBRARY_OUTPUT_DIRECTORY=${workspaceFolder}/tempbuild/lib",
				"-DCMAKE_ARCHIVE_OUTPUT_DIRECTORY=${workspaceFolder}/tempbuild/lib"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "cmake-build",
            "type": "shell",
            "command": "cmake",
            "args": [
				"--build",
                "tempbuild",
                "--config",
                "Debug" ,
				"--",
				"/m:6"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "cmake-configure",
            "problemMatcher": [
                "$msCompile"
            ]
        }
    ]
}